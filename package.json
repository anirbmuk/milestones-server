{
  "name": "milestones-server",
  "version": "4.0.3",
  "description": "Nodejs middleware for Milestones angular application",
  "main": "src/server.js",
  "scripts": {
    "deploy": "gcloud config set project home-milestones && gcloud app deploy --quiet",
    "lint": "eslint src",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.json}\"",
    "format:fix": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.json}\"",
    "build": "tsc",
    "dev": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "prepare": "npx husky install"
  },
  "author": {
    "name": "anirbmuk",
    "email": "anirbmuk@live.in"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anirbmuk/milestones-server.git"
  },
  "bugs": {
    "url": "https://github.com/anirbmuk/milestones-server/issues"
  },
  "homepage": "https://milestones-home.uc.r.appspot.com",
  "keywords": [
    "node",
    "express",
    "milestones"
  ],
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.13",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.7",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
