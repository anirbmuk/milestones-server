{
  "name": "milestones-server",
  "version": "4.0.0",
  "description": "Nodejs middleware for Milestones angular application",
  "main": "src/server.js",
  "scripts": {
    "deploy": "gcloud config set project home-milestones && gcloud app deploy --quiet",
    "lint": "eslint src",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.json}\"",
    "format:fix": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.json}\"",
    "build": "tsc",
    "dev": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "prepare": "npx husky install"
  },
  "author": {
    "name": "anirbmuk",
    "email": "anirbmuk@live.in"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anirbmuk/milestones-server.git"
  },
  "bugs": {
    "url": "https://github.com/anirbmuk/milestones-server/issues"
  },
  "homepage": "https://milestones-home.uc.r.appspot.com",
  "keywords": [
    "node",
    "express",
    "milestones"
  ],
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.24",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
